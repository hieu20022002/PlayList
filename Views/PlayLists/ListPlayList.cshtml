@model IEnumerable<PlayList>

@{
    var dsNN=ViewData["NN"];
    ViewData["Title"] = "Xem PlayList";
    Html.RenderPartial("EnterNN",ViewData["ListNN"]);
        @if(Model!=null){
            if(Model.Count()>0){
                    int i=1;
                    <table border="1">
                        <tr>
                            <th>STT</th>
                            <th>Tên PlayList</th>
                            <th>Chức năng</th>
                        </tr>
        
                        @foreach (var item in Model){
                            
                            <tr>
                                <td>@i</td>
                                <td><a href="ViewPlayList?MaPL=@item.MaPlayList">@item.TenPlayList</a></td>
                                <td><a href="DeletePlayList?id=@item.MaPlayList">Xóa</a></td>
                            </tr>
                            i++;
                        }
       

                    </table>
                
            }
            else{
                <p>@ViewData["ThongBao"]</p>
            }
        }
}
